<%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>

<h1> <%= @portfolio_item.title %> </h1>

<em> <%= @portfolio_item.subtitle %> </em>

<p> <%= @portfolio_item.body %> </p>

<h2> Portfolio Technologies used: </h2>

<% @portfolio_item.technologies.each do |x| %>
  <p> <%= x.name %> </p>
  <% end %>
<p> <%= link_to 'Destroy', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %> </p>
<p> <%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %> </p>
<p> <%= link_to "Back", portfolios_path %> </p>

